<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.hangover.scorecounter.Main2Activity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team A"
            android:layout_marginLeft="30dp"
            android:textSize="30sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team B"
            android:layout_marginLeft="60dp"
            android:textSize="30sp"
            />

    </LinearLayout>
    <TextView
        android:background="@android:color/darker_gray"
        android:layout_width="2dp"
        android:layout_height="325dp"
        android:layout_marginLeft="165dp"
        android:text=""
        android:id="@+id/textView3" />
    <TextView
        android:id="@+id/teamA_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="60sp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="65dp"
        android:textColor="@android:color/black"
        />
    <TextView
        android:id="@+id/teamB_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="60sp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="240dp"
        android:textColor="@android:color/black"
        />

    <Button
        android:layout_height="60dp"
        android:layout_width="120dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="16dp"
        android:text="+3 Points"
        android:onClick="points3"
        />
    <Button
        android:layout_height="60dp"
        android:layout_width="120dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="200dp"
        android:text="+3 Points"
        android:onClick="points31"
        />
    <Button
        android:layout_height="60dp"
        android:layout_width="120dp"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="16dp"
        android:text="+2 Points"
        android:onClick="points2"
        />
    <Button
        android:layout_height="60dp"
        android:layout_width="120dp"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="200dp"
        android:text="+2 Points"
        android:onClick="points21"
        />
    <Button
        android:layout_height="60dp"
        android:layout_width="120dp"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="16dp"
        android:text="Free Throw"
        android:textAllCaps="true"
        android:onClick="freethrow"
        />
    <Button
        android:layout_height="60dp"
        android:layout_width="120dp"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="200dp"
        android:text="Free Throw"
        android:textAllCaps="true"
        android:onClick="freethrow1"
        />
    <TextView
        android:id="@+id/textTimer"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="330dp"
        android:textSize="40sp"
        android:text="00:00:00"
        />
    <Button
        android:id="@+id/btnStart"
        android:layout_height="40dp"
        android:layout_width="80dp"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="40dp"
        android:text="Start"
        android:textAllCaps="true"
        android:onClick="Start"
        />
    <Button
        android:id="@+id/btnPause"
        android:layout_height="40dp"
        android:layout_width="80dp"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="130dp"
        android:text="Pause"
        android:textAllCaps="true"
        android:onClick="pause"
        />
    <Button
        android:id="@+id/btnReset"
        android:layout_height="40dp"
        android:layout_width="80dp"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="215dp"
        android:text="Reset"
        android:textAllCaps="true"
        android:onClick="reset"
        />
    <Button
        android:id="@+id/btnResult"
        android:layout_height="60dp"
        android:layout_width="350dp"
        android:layout_marginTop="430dp"
        android:text="Result"
        android:textAllCaps="true"
        android:onClick="result"
        />

</RelativeLayout>
    </ScrollView>